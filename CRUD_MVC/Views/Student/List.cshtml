@model List<CRUD_MVC.Models.Student>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                @Html.ActionLink("New student", "New", null, new { @class = "btn btn-success" })
            </div>
            <div class="card-body text-center">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Last Name</th>
                            <th>DOB</th>
                            <th colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Student in Model)
                        {
                            <tr>
                                <td>@Student.StudentID</td>
                                <td>@Student.Name</td>
                                <td>@Student.LastName</td>
                                <td>@Student.DOB</td>
                                <td>
                                    <a href="@Url.Action("Edit","Student", new { id = Student.StudentID})" class="badge badge-info">
                                        <i class="fa fa-pencil"></i>
                                        <span>
                                            Modify
                                        </span>
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Delete","Student", new { StudentID = Student.StudentID})" class="badge badge-danger">
                                        <i class="fa fa-eraser"></i>
                                        <span>
                                            Delete
                                        </span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
